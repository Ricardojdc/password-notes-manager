<Window x:Name="Manager" x:Class="Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Manager"
        mc:Ignorable="d"
        Title="Manager" Height="600" Width="1400" MinHeight="600" MinWidth="1000" 
         Background="#FF585858" WindowStartupLocation="CenterScreen">
    <Grid x:Name="MainGrid" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="MainMenu" Background="Black"/>

        <Grid x:Name="ContentArea" Grid.Column="1" Background="#FF4E6DCC"/>

    </Grid>


</Window>
