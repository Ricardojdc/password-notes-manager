<UserControl x:Name="PasswordPageMain" x:Class="Manager.Views.PasswordPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Resources/UIConstants.xaml" />
    </UserControl.Resources>

    <Grid x:Name="PasswordPageGrid" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="573*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="365*"/>
            <RowDefinition Height="32*"/>
        </Grid.RowDefinitions>
        <DockPanel x:Name="DockPanelPassword" LastChildFill="False" VerticalAlignment="Center" Background="Black" Margin="10,0,217,0" Grid.ColumnSpan="2" Height="51">
            <Menu x:Name="PasswordMenu" Background="Black">
                <MenuItem x:Name="File" Header="File" Padding="{StaticResource MenuItemPadding}" Foreground="White" Background="Black" RenderTransformOrigin="0.5,0.5">
                    <MenuItem.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="1.008"/>
                            <RotateTransform/>
                            <TranslateTransform X="0.457"/>
                        </TransformGroup>
                    </MenuItem.RenderTransform>
                    <MenuItem x:Name="New" Header="New " Click="CreateNewFile"/>
                    <Separator/>
                    <MenuItem x:Name="Open" Header="Open" Click="OpenFile"/>
                    <MenuItem x:Name="Save" Header="Save"/>
                    <MenuItem x:Name="Close_File" Header="Close File" Click="CloseFile"/>
                    <Separator/>
                    <MenuItem x:Name="Close" Header="Close" Click="ClosePasswordManager"/>
                </MenuItem>
                <MenuItem x:Name="Edit" Header="Edit" Padding="{DynamicResource MenuItemPadding}" Background="Black" Foreground="White">
                    <MenuItem Header="MenuItem"/>
                </MenuItem>
                <MenuItem x:Name="Entries" Header="Entries" Foreground="White" Background="Black" Grid.IsSharedSizeScope="True" Padding="{DynamicResource MenuItemPadding}">
                    <MenuItem x:Name="New_Entry" Header="New Entry
                              " Click="NewPasswordEntry"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <DataGrid x:Name="PasswordGrid" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=10}"  Foreground="White" RowBackground="#FFECECEC" AlternatingRowBackground="White" BorderBrush="#FF868686" IsReadOnly="True" SelectionUnit="CellOrRowHeader" RowHeaderWidth="30" ColumnHeaderHeight="25" RowHeight="30" SelectionChanged="PasswordGrid_SelectionChanged" Margin="10,10,10,5" Background="#FF313131" BorderThickness="2,2,2,2"/>
        <StatusBar Grid.Row="2" Background="Black" Margin="0,0,2,0" Padding="0,0,0,0" BorderBrush="#FFC33030">
            <StatusBarItem x:Name="StatusText" Content="Test&#xD;&#xA;" Foreground="White" Background="Black" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Sans Serif Collection" Padding="10,0,10,0"/>
        </StatusBar>

        <Grid x:Name="ActionsGrid" Grid.Column="1" Grid.Row="1" Margin="0,89,10,0" Background="#FF313131" VerticalAlignment="Top" Height="233">
            <Button x:Name="EditBtn" Content="Edit" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="58" Height="30" Foreground="White" RenderTransformOrigin="-0.514,1.383" Background="#FF213463" BorderBrush="White"/>
            <Button x:Name="DeleteBtn" Content="Delete" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="66" Height="30" Foreground="White" HorizontalAlignment="Right" Background="#FF941212" BorderBrush="White"/>
            <Label x:Name="ActionGridLabel" Content="" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" BorderBrush="#FF827979" Background="{x:Null}" FontFamily="Microsoft Sans Serif" Foreground="White"/>
        </Grid>
        <TextBox x:Name="SearchTextBox" Grid.Column="1" Margin="0,37,10,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Snow" Background="#FF313131" Height="29"/>
        <Label x:Name="SearchLbl1" Grid.Column="1" Content="Search" Margin="0,7,10,0" Grid.Row="1" Foreground="White" VerticalAlignment="Top" FontFamily="Sans Serif Collection" Height="30" Background="Black"/>
        <StatusBar x:Name="SecondaryStatusBar" Grid.Column="1" Grid.Row="2" Background="Black" Padding="0,0,0,0" BorderBrush="#FFC71616">
            <StatusBarItem x:Name="SecondaryStatusBarItem" Content="StatusItem" Height="38" HorizontalAlignment="Left" VerticalAlignment="Center" Width="126" Foreground="White" Padding="10,0,10,0"/>
        </StatusBar>
    </Grid>
</UserControl>
